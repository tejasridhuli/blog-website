<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Blog Home</title>
</head>
<body>
  <h1>Blog Home</h1>

  <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <a href="/posts/<%= post._id %>">Read more</a>
    </div>
  <% }); %>

  <a href="/compose">Compose</a>
</body>
</html>
